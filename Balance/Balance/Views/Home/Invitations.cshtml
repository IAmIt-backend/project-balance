@model Balance.ViewModels.InvitationsViewModel
@{
    ViewBag.Title = "Invitations";
}

<h2>Invitations</h2>
<form action="" method="post">
    <table class="table table-bordered">
        <tr><th>Group name</th><th>Agree</th><th>Reject</th></tr>
        @{ var count = 0;}
        @foreach (var item in Model.ItemModels)
        {
            
            <tr><td>@item.GroupName</td><td><input type="text" name="[@count].GroupId" value=@item.GroupId hidden/><input type="checkbox" name="[@count].IsVerified" value="true"/></td><td><input type="checkbox" name="[@count].IsRejected" value="true"/></td></tr>
            count++;
        }
            
    </table>
    <input type="submit" name="add" class="btn btn-success" value="Accept"/>
</form>
