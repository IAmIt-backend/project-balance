@{
    ViewBag.Title = "Balance";
}

@{
    var totalMessage = "";
    if (IsPost)
    {
        var text = Request["text"];
        var total = "";
        for (int t = text.Length-1; t >= 0; t--)
        {
            total += text.ElementAt(t);
        }
        totalMessage = "" + total;
    }
}
<!DOCTYPE html>
<html>
<body style="background-color: beige; font-family: Verdana, Arial;">
    <form action="" method="post">
        <p>
            <label for="text1">Enter string:</label><br>
            <input type="text" name="text">
        </p>
        <p><input type="submit" value=" Reverse "></p>
    </form>
    <p>@totalMessage</p>
</body>
</html>


