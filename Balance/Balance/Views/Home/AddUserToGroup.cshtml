@model Balance.ViewModels.AddUserToGroupViewModel
@{
    ViewBag.Title = "AddUserToGroup";
}
<form action="" method="post">

        <div class="form-group">
            <h3><label class="label label-default">Email: </label></h3>
            <input type="text" class="form-control" name="email" placeholder="Enter email of user you want to add">
            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
        </div>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


        <input type="submit" class="btn btn-success" value="Add" />

</form>
