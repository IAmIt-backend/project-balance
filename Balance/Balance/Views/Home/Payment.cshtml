@model Balance.ViewModels.PaymentViewModel
@{
    ViewBag.Title = "Payment";
}
<form action="" method="post">
    <p>
        <h3>
            <label class="label label-default">Value: </label>
        </h3>
        <input type="number" name="value" class="form-control" placeholder="Enter value" step="any">
        <h5><select name="type" class="btn btn-xs">
            @foreach (var type in Model.Types)
            {
                <option value=@type class="btn btn-block">@type</option>
            }
        </select></h5>
    </p>
        @Html.ValidationMessageFor(m => m.Value, "", new {@class = "text-danger"})
        @Html.ValidationSummary(true, "", new {@class = "text-danger"})
    <p>
           <input type="submit" class="btn btn-success" value="Add"/>
    </p>
</form>



